@model IEnumerable<VideoGameSellers.ASP.Models.OpinionModel>

<div class="d-flex">
    @{
        int positive = 0;
        int negative = 0;
        foreach (var item in Model)
        {
            if (item.Type == VideoGameSellers.ASP.Models.Enum.OpinionType.GOOD)
                positive += 1;
            else
                negative += 1;
        }

        <div class="d-flex mr-2 align-items-center text-info">
            <i class="fas fa-thumbs-up">@Html.ActionLink("", "Down", ViewData["Controller"], new { Id = ViewData["Id"] })</i>
            <p class="text-info m-0 ml-1">@positive</p>
        </div>
        <div class="d-flex align-items-center text-danger">
            <i class="fas fa-thumbs-down">@Html.ActionLink("", "Up", ViewData["Controller"], new { Id = ViewData["Id"] })</i>
            <p class="text-danger m-0 ml-1">@negative</p>
        </div>
    }
</div>